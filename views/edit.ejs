<% include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= blog.title %></div>
  
  <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
    <div class="field">
      <label>Blog Title</label>
      <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>" />
    </div>
    
    <div class="field">
      <label>Image Url</label>
      <input type="text" name="blog[image]" placeholder="image" value="<%= blog.image %>"  />
    </div>
    
    <div class="field">
      <label>Body</label>
      <textarea name="blog[body]">
        <%= blog.body %>
      </textarea>
    </div>
    
    <button class="ui basic violet button" type="submit">Submit</button>
  </form>
</div>

<% include ./partials/footer %>